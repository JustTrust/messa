<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_tb_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">

        <TextView
            android:id="@+id/dialog_tb_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="12sp"
            android:paddingTop="12sp"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="@string/cancel_text" />

        <ImageView
            android:id="@+id/dialog_tb_img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/ic_delete" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_tb_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="30dp"
            android:textColor="@color/primary"
            android:textSize="18sp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/dialog_tb_but_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/dialog_tb_but_left"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/accent"
            android:textColor="@color/primary_dark"
            tools:text="@string/cancel_text" />

        <Button
            android:id="@+id/dialog_tb_but_right"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/accent"
            android:textColor="@color/primary_dark"
            tools:text="@string/cancel_text" />
    </LinearLayout>
</LinearLayout>